@page

@model Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<div class="display-4 mb-3" style="margin-bottom: 10rem;">
    <a class="text-decoration-none text-black"
        asp-area="Admin"
        asp-page="/Categories/Index">
        Categories
    </a>
</div>

@if (Model?.Categories?.Count is not > 0)
{
    <partial name="_LonelyHere" />
}
else
{
    <form asp-page="./Index" method="get">
        <input asp-for="@Model.Categories.PageSize"
                name="pageSize"
                value="@Model.Categories.PageSize"
                hidden />
        <input asp-for="@Model.Categories.PageIndex"
                name="pageIndex"
                value="0"
                hidden />

        <div class="input-group mb-1">
            <input asp-for="@Model.Filter"
                   name="filter"
                   value="@Model.Filter"
                   type="text"
                   placeholder="Search Categories"
                   class="form-control"
                   aria-label="Search Categories"
                   aria-describedby="searchButton" />
            <button class="btn btn-outline-secondary"
                    type="button"
                    id="searchButton">
                Go
            </button>
        </div>
    </form>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                @*<th scope="col">#</th>*@
                <th scope="col">Name</th>
                <th scope="col" colspan="2">Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories.Items)
            {
                <tr>
                    @*<td>@category.Id</td>*@
                    <td>@category.Name</td>
                    <td colspan="2">@category.Description.Glimpse(30)</td>
                    <td>
                        <a asp-area="Admin"
                   asp-page="/Categories/CreateOrEdit"
                   asp-route-id="@category.Id"
                   class="link-primary text-decoration-none">
                            Edit
                        </a>

                        &nbsp;

                        <a href="#delete"
                           class="link-danger text-decoration-none js-delete-action"
                           data-action-link="@Url.Action("Delete", "Category", new { categoryId = category.Id })">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pagination" for="@Model.Categories" />
}