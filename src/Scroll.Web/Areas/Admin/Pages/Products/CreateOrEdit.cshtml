@page
@model Products.CreateOrEditModel
@{
    var isCreateMode =
        Model.EditModel.Product.Id is 0;

    ViewData["Title"] =
        isCreateMode
            ? "Create Product"
            : "Edit Product";
}

<div class="card mb-2" style="max-width: 36rem;">
    <div class="card-body">
        <div class="card-title display-6 mb-3">
            @ViewData["Title"]
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>

            <input type="hidden"
                   asp-for="EditModel.Product.Id"/>

            <div class="form-floating">
                <input asp-for="EditModel.Product.Title" class="form-control"/>
                <label asp-for="EditModel.Product.Title"></label>
                <span asp-validation-for="EditModel.Product.Title" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <textarea asp-for="EditModel.Product.Description"
                          class="form-control"
                          style="min-height: 5rem; height: 10rem;">
                </textarea>
                <label asp-for="EditModel.Product.Description"></label>
                <span asp-validation-for="EditModel.Product.Description" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="EditModel.Product.Price" class="form-control"/>
                <label asp-for="EditModel.Product.Price"></label>
                <span asp-validation-for="EditModel.Product.Price" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <select class="selectpicker w-100"
                        asp-for="EditModel.Product.CategoryIds"
                        multiple
                        aria-label="Categories"
                        data-live-search="true"
                        placeholder="Categories">

                    @foreach (var category in Model.AvailableCategories)
                    {
                        <option value="@category.Id">
                            @category.Name
                        </option>
                    }
                </select>
                <span asp-validation-for="EditModel.Product.CategoryIds" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="EditModel.Product.Link" class="form-control"/>
                <label asp-for="EditModel.Product.Link"></label>
                <span asp-validation-for="EditModel.Product.Link" class="text-danger"></span>
            </div>

            <div id="image-options">
                <div class="mb-2">
                    <div class="form-check form-switch">
                        <input class="form-check-input" 
                               type="checkbox" 
                               role="switch" 
                               id="use-existing-image-switch" 
                               checked>
                        <label class="form-check-label"
                               for="use-existing-image-switch">
                            Use Existing Image
                        </label>
                    </div>
                </div>
                
                <div id="existing-image">
                    <div class="form-floating">
                        <input asp-for="EditModel.Product.ImageName" class="form-control"/>
                        <label asp-for="EditModel.Product.ImageName"></label>
                        <span asp-validation-for="EditModel.Product.ImageName" class="text-danger"></span>
                    </div>
                </div>
                <div id="new-image" hidden="hidden">
                    <div class="form-floating">
                        <input asp-for="EditModel.Picture.Name" 
                               class="form-control"
                               value="insert-name"/>
                        <label asp-for="EditModel.Picture.Name"></label>
                        <span asp-validation-for="EditModel.Picture.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <input asp-for="EditModel.Picture.File" class="form-control"/>
                        <span asp-validation-for="EditModel.Picture.File" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="EditModel.Picture.Width" class="form-control"/>
                        <label asp-for="EditModel.Picture.Width"></label>
                        <span asp-validation-for="EditModel.Picture.Width" class="text-danger"></span>
                    </div>

                    <div class="form-floating">
                        <input asp-for="EditModel.Picture.Height" class="form-control"/>
                        <label asp-for="EditModel.Picture.Height"></label>
                        <span asp-validation-for="EditModel.Picture.Height" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <input type="submit"
                   value="@(isCreateMode ? "Create" : "Save")"
                   class="btn btn-primary me-1"/>

            @if (isCreateMode)
            {
                <input type="reset"
                       value="Reset"
                       class="btn btn-secondary"/>
            }
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}