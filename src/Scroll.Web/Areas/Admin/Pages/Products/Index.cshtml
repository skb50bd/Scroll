@page
@using Humanizer
@using Scroll.Service.Services
@model Scroll.Web.Areas.Admin.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="display-4 mb-3" style="margin-bottom: 10rem;">
    <a class="text-decoration-none text-black"
       asp-area="Admin"
       asp-page="/Products/Index">
        @ViewData["Title"]
    </a>
</div>

@if (Model?.Products?.Count is not > 0)
{
    <partial name="_LonelyHere" />
}
else
{
    <div class="clearfix w-100">
        <div class="float-start">
            <form asp-page="./Index"
                  method="get"
                  class="vstack gap-1">

                <input asp-for="@Model.PageSize"
                       name="pageSize"
                       value="@Model.PageSize"
                       hidden />

                <input asp-for="@Model.PageIndex"
                       name="pageIndex"
                       value="0"
                       hidden />

                <input asp-for="@Model.SearchString"
                        name="filter"
                        value="@Model.SearchString"
                        type="search"
                        placeholder="Product Title Filter"
                        class="form-control"
                        aria-label="Product Title Filter"
                        aria-describedby="searchButton" />

                <select class="form-select"
                        asp-for="@Model.CategoryId">
                    <option selected disabled>
                        Filter Category
                    </option>

                    @foreach(var category in Model.Categories.Items)
                    {
                        <option value="@category.Id">
                            @category.Name
                        </option>
                    }
                </select>

                <select class="form-select"
                        asp-for="@Model.SortBy">

                    <option selected disabled>
                        Sort By
                    </option>

                    @foreach(var sortBy in Enum.GetValues(typeof(ProductSortOrder)).Cast<ProductSortOrder>())
                    {
                        <option value="@sortBy">
                            @sortBy.Humanize(LetterCasing.Title)
                        </option>
                    }
                </select>

                <button class="btn btn-success"
                        type="submit"
                        id="searchButton">
                    Go
                </button>
            </form>
        </div>

        <a class="btn btn-outline-primary float-end"
           asp-page="./CreateOrEdit">
            New
        </a>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col" colspan="2">Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products.Items)
            {
                <tr>
                    <td>@product.Title</td>
                    <td colspan="2">@product.Description.Glimpse(30)</td>
                    <td>
                        <a asp-page="./CreateOrEdit"
                           asp-route-id="@product.Id"
                           class="link-primary text-decoration-none">
                            Edit
                        </a>

                        &nbsp;

                        <a href="#delete"
                           class="link-danger text-decoration-none js-delete-action"
                           data-delete-url="@Url.Action("Delete", "Product", new { productId = product.Id })"
                           data-redirect-url="@Url.Page("./Index")">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_Pagination" for="@Model.Products" />
}