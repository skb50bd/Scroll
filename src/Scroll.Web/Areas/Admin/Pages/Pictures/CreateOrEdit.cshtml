@page
@model Pictures.CreateOrEditModel
@{
    ViewData["Title"] = "Add Picture";
}

<div class="card mb-2" style="max-width: 36rem;">
    <div class="card-body">
        <div class="card-title display-6 mb-3">
            @ViewData["Title"]
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"
                 class="text-danger">
            </div>

            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input asp-for="Input.File" class="form-control" />
                <span asp-validation-for="Input.File" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Width" class="form-control" />
                <label asp-for="Input.Width"></label>
                <span asp-validation-for="Input.Width" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Height" class="form-control" />
                <label asp-for="Input.Height"></label>
                <span asp-validation-for="Input.Height" class="text-danger"></span>
            </div>

            <input type="submit"
                   value="Create"
                   class="btn btn-primary me-1" />

            <input type="reset"
                value="Reset"
                class="btn btn-secondary" />
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}